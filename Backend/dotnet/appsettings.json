{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.SemanticKernel": "Information"
    }
  },
  "AllowedHosts": "*",
  "FRONTEND_URL": "http://localhost:3001",
  "Kestrel": {
    "Limits": {
      "KeepAliveTimeout": "00:10:00",
      "RequestHeadersTimeout": "00:05:00"
    }
  },
  "Mcp": {
    "Enabled": true,
    "DefaultTimeoutSeconds": 30,
    "Servers": [
      {
        "Name": "demo-api-server",
        "Description": "Demo API MCP Server (stdio) - Weather, Product, and Order tools via DemoController on port 8000",
        "Transport": "stdio",
        "Command": "dotnet",
        "Arguments": ["run", "--project", "McpServer/DotNetAgentFramework.McpServer.csproj"],
        "Enabled": true,
        "TimeoutSeconds": 30,
        "EnvironmentVariables": {
          "DEMO_API_BASE_URL": "http://localhost:8000",
          "DEMO_API_AUTH_TOKEN": "Bearer demo-token-12345",
          "MCP_TRANSPORT": "stdio"
        }
      },
      {
        "Name": "sample-rest-api-server",
        "Description": "Sample REST API MCP Server (stdio) - Employee, Product, Order, Inventory tools via SampleRestApi on port 5001",
        "Transport": "stdio",
        "Command": "dotnet",
        "Arguments": ["run", "--project", "McpServer/DotNetAgentFramework.McpServer.csproj"],
        "Enabled": false,
        "TimeoutSeconds": 30,
        "EnvironmentVariables": {
          "DEMO_API_BASE_URL": "http://localhost:5001",
          "DEMO_API_AUTH_TOKEN": "Bearer demo-token-12345",
          "MCP_TRANSPORT": "stdio"
        }
      },
      {
        "Name": "demo-api-sse-server",
        "Description": "Demo API MCP Server (SSE) - Product and Order management tools via HTTP",
        "Transport": "sse",
        "Endpoint": "http://localhost:5050/sse",
        "Enabled": false,
        "TimeoutSeconds": 30,
        "Headers": {
          "X-Api-Key": "demo-api-key"
        }
      },
      {
        "Name": "sample-rest-api-bridge",
        "Description": "Sample REST API MCP Bridge (stdio) - Bridging REST APIs as MCP tools",
        "Transport": "stdio",
        "Command": "dotnet",
        "Arguments": ["run", "--project", "Examples/SampleMcpBridge/SampleMcpBridge.csproj"],
        "Enabled": false,
        "TimeoutSeconds": 30,
        "EnvironmentVariables": {
          "REST_API_BASE_URL": "http://localhost:5100"
        }
      }
    ]
  }
}